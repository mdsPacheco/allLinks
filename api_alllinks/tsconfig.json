{
  "compilerOptions": {
    "target": "es2017",     
    "module": "commonjs",   
    "lib": ["es6"],  
    "allowJs": true, 
    "outDir": "./dist",                        
    "rootDir": "./src",  
    "removeComments": true,  

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ], 

    "resolveJsonModule": true,

    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,                                         
    "skipLibCheck": true                                 
  }
}
